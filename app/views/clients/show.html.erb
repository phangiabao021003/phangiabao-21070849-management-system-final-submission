<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Client</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to clients_path, class: button_class(theme: "transparent") do %>
      All Clients
      <% end %>
      <%= link_to edit_client_path(@client), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Clientname:</p>
        <p><%= @client.ClientName %></p>
      </li>
      <li>
        <p class="font-semibold">Clientid:</p>
        <p><%= @client.ClientID %></p>
      </li>
      <li>
        <p class="font-semibold">Phone:</p>
        <p><%= @client.Phone %></p>
      </li>
  </ul>
</div>
